</head>
<header>
        <% include ./partial/header.ejs %>
</header>
<body> 
    <main id="edit-profile-container">
        <div class='row'>
            <div class='col-sm-offset-3'>
                <div class='edit-title'>
                <h1>Edit your profile</h1>
                </div>
            </div>
        </div>

            <form id="updateprofile" action="/editprofile" method="POST" Content-Type="application/x-www-form-urlencoded">
                <div class='user-container'>
                    <div class='row'>
                        <div class="profile-img col-sm-offset-3">

                        </div>
                        <div class='user-data col-sm-offset-3'>
                            <div class="user-info">                       
                            <label class="name"><h3>Name:</h3></label>
                            </br>
                            <label class="username"><h3>Username:</h3></label>
                            </br>
                            <label><h3>Password:</h3></label>
                            </br>
                            <input type="updatepassword" name="updatepassword">
                            </br>
                            <label class="photo"><h3>Photo URL:</h3></label>
                            </br>
                            <input class="update-profile-button" type="submit" value="Update">
                        </div>
                        </div>
                    </div>
                </div>
            </br>   
        </br>   
            </form>
        </br>  
    </br>  
    </main>
</body>
